class Program
    {

        static void Main(string[] args)
        {
            
            
            
            
            Console.WriteLine("Please enter User Name");
            string userName = Console.ReadLine();

            if (userName == "Kevin")
            {
                bool isRegistered = true;
                bool isAdmin = true;

                if (isRegistered && isAdmin == true)
                {
                    Console.WriteLine("which database would you like to see 1 or 2");
                    var myVar = Console.ReadLine();
                    if (myVar == "1")
                    {
                        Console.WriteLine("Secrete Database1");
                    }
                    if (myVar == "2")
                    { 
                        Console.WriteLine("Secrete Database2");
                    }
                }

            }

            if (userName == "" || userName != "Kevin") 
            {
                Console.WriteLine("ACCESS DENIED");
                
            }
           
            Console.Read();
            



        }  
    }
}       